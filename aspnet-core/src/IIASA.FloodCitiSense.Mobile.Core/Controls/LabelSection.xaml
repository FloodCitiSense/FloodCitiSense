<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="IIASA.FloodCitiSense.Mobile.Core.Controls.LabelSection"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ContentView.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS">16,24,16,4</On>
            <On Platform="Android">16,16,16,4</On>
        </OnPlatform>
    </ContentView.Padding>

    <ContentView.Content>
        <Label x:Name="SectionLabel" Style="{DynamicResource SectionLabelTextStyle}" />
    </ContentView.Content>
</ContentView>
