            </Frame>
            <StackLayout
                Grid.Row="1"
                Margin="10,0,10,0"
                Padding="0"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Center">
                <Button
                    Command="{Binding IncidentCommand}"
                    Style="{StaticResource ActionButton}"
                    Text="{Binding ReportAnIncident}" />
            </StackLayout>
